	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = blue
[core]
	# filemode = false # Windows only
[diff]
	tool = kdiff3
[difftool "diffpdf"]
	cmd = diffpdf \"$LOCAL\" \"$REMOTE\"
	prompt = false
[diff "pdf"]                            # custom pattern
	textconv = pdftotext-stdout
[merge]
	stat = true
[push]
	default = simple
[rebase]
	missingCommitsCheck = error
	stat = true
[submodule]
	fetchJobs = 4
