# on Windows, set core.filemode = false
[color "branch"]
	current = blue reverse
	local = blue
	remote = green
[color "diff"]
	meta = blue
[core]
	excludesfile = ~/.gitignore_global
[diff]
	tool = kdiff3
[merge]
	stat = true
[push]
	default = simple
[rebase]
	missingCommitsCheck = warn
	stat = true
