#!/bin/bash

read -r -d "" USAGE <<EOF
Usage: $(basename $0) PATH...
Simplifies each of the PATHs, removing unnecessary '..', '.', and '/'.
EOF
if [ "$#" = 0 ]; then
    echo >&2 "$USAGE"
    exit 1
fi

for P in "$@"; do
    # Strip '.'
    PATTERN='\(^\|/\+\)\.\(/\+\|$\)'
    while grep <<<"$P" >/dev/null "$PATTERN"; do
        P=$(sed <<<"$P" "s:$PATTERN:\1:g")
    done
    # Strip '..'
    PATTERN='[^/]*/\+\.\.\(/\+\|$\)'
    PRE=
    while grep <<<"$P" >/dev/null "$PATTERN"; do
        PRE="$PRE"$(grep <<<"$P" -o '^\(\.\./\)*')
        P="${P##$PRE}"
        P=$(sed <<<"$P" "s:$PATTERN::")
    done
    # Strip extra '/'
    P=$(sed <<<"$PRE$P" 's:/\+:/:g')
    # If there's nothing left, add a '.'
    [ "$P" ] || P=.
    echo "$P"
done
