[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = blue
[core]
	# filemode = false # Windows only
[diff]
	tool = kdiff3
[diff "pdf"]                            # custom pattern
	textconv = pdftotext-stdout
[diff "tex"]                            # modified built-in pattern
	textconv = split-sentences
[merge]
	stat = true
[push]
	default = simple
[rebase]
	missingCommitsCheck = error
	stat = true
[submodule]
	fetchJobs = 4
