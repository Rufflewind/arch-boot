[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = blue
[core]
	pager = less -R # prevent LESS= from messing up colors
	# filemode = false # Windows only
[diff]
	tool = kdiff3
	algorithm = patience
[difftool "diffpdf"]
	cmd = diffpdf \"$LOCAL\" \"$REMOTE\"
	prompt = false
[diff "pdf"]                            # custom pattern
	textconv = pdftotext-stdout
[merge]
	stat = true
[pull]
	rebase = true
[push]
	default = simple
[rebase]
	autoStash = true
	missingCommitsCheck = error
	stat = true
[submodule]
	fetchJobs = 4
